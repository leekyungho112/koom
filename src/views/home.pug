<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Koom
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body
        header
            h1 Koom!
        main
            div#welcome
                form
                    input#name(type="text", required, placeholder="nickname")
                    button Save
                    input#roomname(type="text", required, placeholder="room name")
                    button Enter Room
                h4 Open Rooms:
                ul    
            div#room
                h3
                ul
                form#msg
                    input(type="text", required, placeholder="message")
                    button Send
    script(src="/socket.io/socket.io.js")        
    script(src="/public/js/app.js")